@model Plantilla_Agenda.Models.Agenda

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Agendamiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="IdSede" class="control-label">Sede</label>
                <select asp-for="IdSede" class="form-control" asp-items="@Model.Sedes.Select(s => new SelectListItem { Value = s.IdSede.ToString(), Text = s.Direccion })"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdServicio" class="control-label">Servicio</label>
                <select asp-for="IdServicio" class="form-control" asp-items="@Model.Servicioss.Select(s => new SelectListItem { Value = s.IdServicio.ToString(), Text = s.Nombre })"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdHorario" class="control-label">Horario</label>
                <select asp-for="IdHorario" class="form-control" asp-items="@Model.Horarios.Select(h => new SelectListItem { Value = h.IdHorario.ToString(), Text = ""+h.HoraInicio })"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdProfesional" class="control-label">Profesional</label>
                <select asp-for="IdProfesional" class="form-control" asp-items="@Model.Personas.Select(p => new SelectListItem { Value = p.IdPersona.ToString(), Text = p.PrimerApellido})"></select>
            </div>



          

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
