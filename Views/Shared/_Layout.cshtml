<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plantilla_Agenda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Plantilla_Agenda.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @*{
            var routes = new[]
            {
        new { Name = "Details", Pattern = "Agendamiento/Details/{id}" },
        new { Name = "Create", Pattern = "Agendamiento/Create" },
        new { Name = "Edit", Pattern = "Agendamiento/Edit/{id}" },
        new { Name = "Delete", Pattern = "Agendamiento/Delete/{id}" },
        new { Name = "Index", Pattern = "Agendamiento" }, new { Name = "Details", Pattern = "Agenda/Details/{id}" },
        new { Name = "Create", Pattern = "Agenda/Create" },
        new { Name = "Edit", Pattern = "Agenda/Edit/{id}" },
        new { Name = "list", Pattern = "Agenda/List" },
        new { Name = "delete", Pattern = "Agenda/Delete/{id}" },
        new { Name = "Index", Pattern = "Agenda" }
        }*@;
        @{
            var controllers = new[] { "Agenda", "Agendamiento","Servicio" };
            var actions = new Dictionary<string, string[]>
        {
        { "Agenda", new[] { "Create", "List", "index" } },
        { "Servicio", new[] { "Create" , "List"} },
        { "Agendamiento", new[] { "Create",   "List" } }
        // Add more controllers and actions as needed
        };
        }
        }
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Plantilla_Agenda</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Persona" asp-action="Login">Login</a>
                        </li>
                       
                        @*foreach (var route in routes)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Agendamiento" asp-action="@route.Name">@route.Name</a>
                            </li>
                        }*@
                        @foreach (var controller in controllers)
                        {
                           @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="@controller" asp-action="Index">@controller</a>
                            </li>*@

                            foreach (var action in actions[controller])
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="@controller" asp-action="@action">@action @controller </a>
                                </li>
                            }
                        }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Plantilla_Agenda - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
