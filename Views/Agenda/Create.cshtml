@model AgendaCreateViewModel

@{
    ViewData["Title"] = "Crear Agenda";
}

<h1>Crear Agenda</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Agenda" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <select asp-for="IdSede" class="form-control" asp-items="Model.Sedes">
                <option value="">-- Seleccione una sede --</option>
            </select>
            <span asp-validation-for="IdSede" class="text-danger"></span>

            <select asp-for="IdServicio" class="form-control" asp-items="Model.Servicios">
                <option value="">-- Seleccione un servicio --</option>
            </select>
            <span asp-validation-for="IdServicio" class="text-danger"></span>

            <select asp-for="IdHorario" class="form-control" asp-items="Model.Horarios">
                ```html
                <option value="">-- Seleccione un horario --</option>
            </select>
            <span asp-validation-for="IdHorario" class="text-danger"></span>

            <select asp-for="IdProfesional" class="form-control" asp-items="Model.Personas">
                <option value="">-- Seleccione un profesional --</option>
            </select>
            <span asp-validation-for="IdProfesional" class="text-danger"></span>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}